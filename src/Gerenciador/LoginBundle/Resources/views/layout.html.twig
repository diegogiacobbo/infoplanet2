        <script type="text/javascript">
            $(document).ready(function() {
                $('.dropdown-toggle').focusout(function(){
                    $('.dropdown').removeClass('open');
                });
                $('.dropdown-toggle').click(function(){
                    if($('.dropdown').hasClass('open'))
